{
  "name": "@gravity-ui/react-data-table",
  "version": "1.3.0",
  "description": "DataTable component",
  "main": "build/esm/lib/index.js",
  "types": "build/esm/lib/index.d.ts",
  "files": [
    "build/esm/lib"
  ],
  "sideEffects": [
    "*.scss"
  ],
  "scripts": {
    "lint:js": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:other": "npm run prettier -- --check",
    "lint:styles": "stylelint 'src/**/*.scss'",
    "lint": "run-p lint:*",
    "prettier": "prettier '**/*.{md,json,yaml,yml}'",
    "dev": "npm run start",
    "start": "start-storybook -p 7007",
    "build-storybook": "build-storybook -c .storybook -o storybook-static",
    "typecheck": "npm run build:compile -- --noEmit",
    "test": "jest",
    "build:clean": "rm -rf build",
    "build:compile": "tsc",
    "build:copy": "copyfiles -u 1 \"src/**/*.scss\" build/esm",
    "build": "npm run build:clean && npm run build:compile && npm run build:copy",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gravity-ui/react-data-table"
  },
  "keywords": [
    "table"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.14.0",
    "prop-types": ">=15.8.0",
    "@bem-react/classname": ">=1.6.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@bem-react/classname": "^1.6.0",
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@gravity-ui/eslint-config": "^2.0.0",
    "@gravity-ui/prettier-config": "^1.0.1",
    "@gravity-ui/stylelint-config": "^2.0.0",
    "@gravity-ui/tsconfig": "^1.0.0",
    "@gravity-ui/uikit": "^4.0.5",
    "@storybook/addon-essentials": "6.4.9",
    "@storybook/preset-scss": "1.0.3",
    "@storybook/react": "6.4.9",
    "@types/jest": "27.4.0",
    "@types/node": "14.18.4",
    "@types/react": "16.14.21",
    "@types/react-dom": "16.9.14",
    "@types/react-list": "0.8.7",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "copyfiles": "2.4.1",
    "css-loader": "5.2.7",
    "eslint": "8.6.0",
    "jest": "27.4.5",
    "nano-staged": "0.5.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.5",
    "prettier": "2.5.1",
    "prop-types": "15.8.0",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "react-router-dom": "5.3.0",
    "sass": "1.45.2",
    "sass-loader": "10.2.0",
    "simple-git-hooks": "2.7.0",
    "style-loader": "2.0.0",
    "stylelint": "^14.16.1",
    "ts-jest": "27.1.2",
    "typescript": "4.5.4",
    "webpack": "4.46.0"
  },
  "dependencies": {
    "react-list": "0.8.16"
  },
  "nano-staged": {
    "*.scss": [
      "stylelint --fix --quiet"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --quiet"
    ],
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx nano-staged",
    "commit-msg": "npx commitlint --edit $1"
  }
}
