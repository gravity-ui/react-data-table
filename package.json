{
  "name": "@yandex-cloud/react-data-table",
  "version": "1.0.0",
  "description": "DataTable component",
  "main": "build/esm/lib/index.js",
  "types": "build/esm/lib/index.d.ts",
  "files": [
    "build/esm/lib"
  ],
  "sideEffects": [
    "*.scss"
  ],
  "scripts": {
    "lint:js": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:other": "npm run prettier -- --check",
    "lint:styles": "stylelint 'src/**/*.scss'",
    "lint": "run-p lint:*",
    "prettier": "prettier '**/*.{md,json,yaml,yml}'",
    "start": "start-storybook -p 7007",
    "build-storybook": "build-storybook -c .storybook -o storybook-static",
    "typecheck": "npm run build:compile -- --noEmit",
    "test": "jest",
    "build:clean": "rm -rf build",
    "build:compile": "tsc",
    "build:copy": "copyfiles -u 1 \"src/**/*.scss\" build/esm",
    "build": "npm run build:clean && npm run build:compile && npm run build:copy",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yandex-cloud/react-data-table"
  },
  "keywords": [
    "table"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.14.0",
    "prop-types": ">=15.8.0",
    "bem-cn-lite": ">=4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@storybook/addon-essentials": "^6.4.4",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.4.4",
    "@types/jest": "^27.4.0",
    "@types/node": "^14.6.2",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-list": "^0.8.5",
    "@yandex-cloud/eslint-config": "^1.0.0",
    "@yandex-cloud/i18n": "^0.1.1",
    "@yandex-cloud/prettier-config": "^1.0.0",
    "@yandex-cloud/stylelint-config": "^1.0.0",
    "@yandex-cloud/tsconfig": "^1.0.0",
    "@yandex-cloud/uikit": "^1.0.0",
    "bem-cn-lite": "^4.0.0",
    "copyfiles": "^2.4.1",
    "css-loader": "^5.2.7",
    "eslint": "^8.2.0",
    "jest": "^27.4.5",
    "nano-staged": "^0.5.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "prop-types": "^15.8.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-router-dom": "^5.2.0",
    "sass": "^1.44.0",
    "sass-loader": "^10.2.0",
    "simple-git-hooks": "^2.7.0",
    "style-loader": "^2.0.0",
    "stylelint": "^14.1.0",
    "ts-jest": "^27.1.2",
    "typescript": "^4.4.4",
    "webpack": "^4.46.0"
  },
  "dependencies": {
    "react-list": "^0.8.15"
  },
  "nano-staged": {
    "*.scss": [
      "stylelint --fix --quiet"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --quiet"
    ],
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx nano-staged",
    "commit-msg": "npx commitlint --edit $1"
  }
}
